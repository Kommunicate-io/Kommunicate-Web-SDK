{
    "rewrites": [{ "source": "/chat", "destination": "/chat.html" }],
    "headers": [
        {
            "source": "**",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        },
        {
            "source": "**/*.app",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/javascript"
                }
            ]
        }
    ]
}
