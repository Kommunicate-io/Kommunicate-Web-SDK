{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha",
            "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--inspect",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/server/test/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
         {
            "type": "node",
            "request": "launch",
            "name": "Webpack",
            "program": "${workspaceFolder}/react/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config", "${workspaceFolder}/react/webpack.config.js", "--env.REACT_APP_NODE_ENV=prod", "--env.BRAND=applozic", "--progress", "--mode", "production"
             ],
             
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/server/app.js"
        }
    ]
}